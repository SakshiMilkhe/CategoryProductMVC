@model IPagedList<CategoryProductMVC.Models.Product>

@{
    ViewBag.Title = "DisplayProducts";
}

@using PagedList;
@using PagedList.Mvc;

<h2>DisplayProducts</h2>
@Html.ActionLink("Create New", "CreateProduct")
<br />
<br />
<table>
    <tr>
        <th>@Html.DisplayNameFor(item => item.First().ProductId)</th>
        <th>@Html.DisplayNameFor(item => item.First().ProductName)</th>
        <th>@Html.DisplayNameFor(item => item.First().CategoryId)</th>
        <th>@Html.DisplayNameFor(item => item.First().CategoryName)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>
                @Html.ActionLink("Edit", "EditProduct", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "DetailsProduct", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "DeleteProduct", new { id = item.ProductId })
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, i => Url.Action("DisplayProducts", "Product", new { i, search = Request.QueryString["search"] }))
<br />
<br />
@Html.ActionLink("Add Category", "DisplayCategories", "Category")